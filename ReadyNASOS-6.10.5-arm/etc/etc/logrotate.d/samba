/var/log/samba/log.smbd {
        weekly
        missingok
        rotate 7
        postrotate
                systemctl -q reload smb
        endscript
        compress
        notifempty
}

/var/log/samba/log.nmbd {
        weekly
        missingok
        rotate 7
        postrotate
                systemctl -q reload nmb
        endscript
        compress
        notifempty
}
